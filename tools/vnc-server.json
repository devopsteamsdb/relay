{
    "name": "VNC Server",
    "description": "TigerVNC server for remote desktop access",
    "download_steps": [
        {
            "type": "shell",
            "package_manager": "dnf",
            "command": "dnf install -y --downloadonly --downloaddir={download_dir} tigervnc-server"
        },
        {
            "type": "shell",
            "package_manager": "apt",
            "command": "apt-get update && apt-get install -y --download-only -o Dir::Cache::archives={download_dir} tigervnc-standalone-server tigervnc-common"
        }
    ],
    "install_steps": [
        {
            "type": "shell",
            "package_manager": "dnf",
            "command": "dnf install -y {download_dir}/*.rpm"
        },
        {
            "type": "shell",
            "package_manager": "apt",
            "command": "dpkg -i {download_dir}/*.deb || apt-get install -f -y"
        }
    ],
    "idempotency_check": "vncserver -version"
}
