{
    "name": "k9s",
    "description": "Kubernetes CLI To Manage Your Clusters In Style",
    "download_steps": [
        {
            "type": "shell",
            "command": "curl -L -o {download_dir}/k9s.tar.gz https://github.com/derailed/k9s/releases/latest/download/k9s_Linux_amd64.tar.gz"
        }
    ],
    "install_steps": [
        {
            "type": "shell",
            "command": "tar -zxvf {download_dir}/k9s.tar.gz -C /usr/local/bin k9s"
        },
        {
            "type": "shell",
            "command": "chmod +x /usr/local/bin/k9s"
        }
    ],
    "idempotency_check": "k9s version"
}