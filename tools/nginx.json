{
    "name": "NGINX",
    "description": "High-performance web server and reverse proxy",
    "download_steps": [
        {
            "type": "shell",
            "command": "dnf install -y --downloadonly --downloaddir={download_dir} nginx"
        }
    ],
    "install_steps": [
        {
            "type": "shell",
            "command": "dnf install -y {download_dir}/*.rpm"
        },
        {
            "type": "shell",
            "command": "systemctl enable --now nginx"
        }
    ],
    "idempotency_check": "systemctl is-active nginx"
}