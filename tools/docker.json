{
    "name": "Docker",
    "description": "Containerization platform",
    "version": "{{latest_version}}",
    "version_source": {
        "type": "github_release",
        "repo": "moby/moby"
    },
    "download_steps": [
        {
            "type": "shell",
            "package_manager": "dnf",
            "command": "dnf config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo"
        },
        {
            "type": "shell",
            "package_manager": "dnf",
            "command": "dnf install -y --downloadonly --downloaddir={download_dir} docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin"
        },
        {
            "type": "shell",
            "package_manager": "apt",
            "command": "mkdir -p /etc/apt/keyrings && curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg --yes"
        },
        {
            "type": "shell",
            "package_manager": "apt",
            "command": "echo \"deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable\" | tee /etc/apt/sources.list.d/docker.list > /dev/null"
        },
        {
            "type": "shell",
            "package_manager": "apt",
            "command": "apt-get update && apt-get install -y --download-only -o Dir::Cache::archives={download_dir} docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin"
        }
    ],
    "install_steps": [
        {
            "type": "shell",
            "package_manager": "dnf",
            "command": "dnf install -y {download_dir}/*.rpm"
        },
        {
            "type": "shell",
            "package_manager": "apt",
            "command": "dpkg -i {download_dir}/*.deb || apt-get install -f -y"
        },
        {
            "type": "shell",
            "command": "systemctl enable --now docker"
        },
        {
            "type": "shell",
            "command": "usermod -aG docker $SUDO_USER || usermod -aG docker $(whoami)"
        }
    ],
    "idempotency_check": "docker --version"
}
