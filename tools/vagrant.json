{
    "name": "Vagrant",
    "description": "Tool for building and managing virtual machine environments",
    "download_steps": [
        {
            "type": "shell",
            "command": "dnf config-manager --add-repo https://rpm.releases.hashicorp.com/RHEL/hashicorp.repo"
        },
        {
            "type": "shell",
            "command": "dnf install -y --reinstall --downloadonly --downloaddir={download_dir} vagrant"
        }
    ],
    "install_steps": [
        {
            "type": "shell",
            "command": "dnf install -y {download_dir}/*.rpm"
        }
    ],
    "idempotency_check": "vagrant --version"
}