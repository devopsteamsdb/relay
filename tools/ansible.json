{
    "name": "Ansible",
    "description": "Configuration management and automation",
    "download_steps": [
        {
            "type": "shell",
            "command": "python3 -m pip download ansible --dest \"{download_dir}\""
        }
    ],
    "install_steps": [
        {
            "type": "shell",
            "command": "python3 -m pip install --no-index --find-links=\"{download_dir}\" ansible"
        }
    ],
    "idempotency_check": "ansible --version"
}