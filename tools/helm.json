{
    "name": "Helm",
    "description": "The Kubernetes Package Manager",
    "download_steps": [
        {
            "type": "shell",
            "command": "VER=$(curl -s https://api.github.com/repos/helm/helm/releases/latest | grep tag_name | cut -d '\"' -f 4) && curl -L https://get.helm.sh/helm-$VER-linux-amd64.tar.gz -o {download_dir}/helm.tar.gz"
        }
    ],
    "install_steps": [
        {
            "type": "shell",
            "command": "tar -zxvf {download_dir}/helm.tar.gz -C /tmp/"
        },
        {
            "type": "shell",
            "command": "mv /tmp/linux-amd64/helm /usr/bin/helm"
        },
        {
            "type": "shell",
            "command": "chmod +x /usr/bin/helm"
        }
    ],
    "idempotency_check": "helm version --client"
}