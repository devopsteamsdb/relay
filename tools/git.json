{
    "name": "Git",
    "description": "Distributed version control system",
    "download_steps": [
        {
            "type": "shell",
            "command": "dnf download --resolve --destdir={download_dir} git"
        }
    ],
    "install_steps": [
        {
            "type": "shell",
            "command": "dnf install -y {download_dir}/*.rpm"
        }
    ],
    "idempotency_check": "git --version"
}